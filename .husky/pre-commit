#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🎭 Running pre-commit checks..."

# Run lint-staged (includes prettier, eslint, and type-check for staged files)
echo "✨ Formatting and linting staged files..."
pnpm lint-staged || exit 1

# Run additional type checking on the entire project
echo "📝 Running full type check..."
pnpm type-check || exit 1

echo "✅ All pre-commit checks passed!"
